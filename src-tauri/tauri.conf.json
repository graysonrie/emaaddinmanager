{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "EMA Addin Launcher",
  "version": "0.1.0",
  "identifier": "com.ema.addinmanager",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "EMA Addin Launcher",
        "width": 800,
        "height": 600,
        "minWidth": 500,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../public/**/*"
    ]
  }
}
